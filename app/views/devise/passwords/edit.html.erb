<h2><%= t('global.change_password') %></h2>

<%= simple_form_for(:user, as: :user, url: new_user_password_path, html: {method: :put}) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: "New password",
                required: true,
                autofocus: true,
                hint: ("#{@minimum_password_length} #{t('member_registration.char_min')}" if @minimum_password_length),
                input_html: {autocomplete: "new-password"} %>
    <%= f.input :password_confirmation, label: t('password.confirm'), required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('password.change') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
